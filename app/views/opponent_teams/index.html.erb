<div class="container mt-6">
  <h1 class="text-center mb-4">TEAMS</h1>

  <div class="d-flex justify-content-between align-items-center mb-3">
    <!-- Search Bar -->
    <div class="input-group">

      <input type="text" class="form-control" placeholder="Search..." aria-label="Search" aria-describedby="basic-addon2">
      <div class="input-group-append">
        <button class="btn btn-outline-secondary" type="button">Search</button>
      </div>
      
    </div>

    <%= link_to "New Opponent Team", new_tournament_opponent_team_path, class: "btn btn-success" %>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @opponent_teams.each do |opponent_team| %>
        <tr>
          <td><%= opponent_team.name %></td>
          <td>
            <%= link_to "Show", tournament_opponent_teams_path, class: "btn btn-primary btn-sm" %> 
            <% if false %>
            <% if can? :update, team %>
              <%= link_to "Edit", edit_tournament_opponent_team_path, class: "btn btn-secondary btn-sm" %> 
            <% end %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
