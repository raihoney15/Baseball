<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
    <div class="border rounded p-4"> 
      <%= form_with model: @tournament, local: true do |form| %>

        <div class="form-group">
          <%= form.label :Name %><span class="required">*</span>
          <%= form.text_field :name, class: "form-control", autocomplete: 'off' %>
          <% if @tournament.errors[:Name].any? %>
          <div class="error-message", style="color: #f4340a;">
            <b><%= "Name" + @tournament.errors[:Name].join(", ") %></b>
          </div>
        <% end %>
        </div>

        <div class="form-group">
          <%= form.label :start_date %><span class="required" >*</span>
          <%= form.date_field :start_date, class: "form-control", autocomplete: 'off' %>
          <% if @tournament.errors[:start_date].any? %>
          <div class="error-message" , style="color: #f4340a;">
            <b><%= "start_date" + @tournament.errors[:start_date].join(" , ") %></b>
          </div>
        <% end %>
        </div>

        <div class="form-group">
          <%= form.label :end_date %><span class="required">*</span>
          <%= form.date_field :end_date, class: "form-control", autocomplete: 'off' %>
          <% if @tournament.errors[:end_date].any? %>
          <div class="error-message", style="color: #f4340a;">
            <b><%= "end_date" +" " +  @tournament.errors[:end_date].join(" , ") %></b>
          </div>
        <% end %>
        </div>

        <div class="form-group">
          <%= form.label :location %><span class="required">*</span>
          <%= form.text_field :location, class: "form-control", autocomplete: 'off' %>
          <% if @tournament.errors[:location].any? %>
          <div class="error-message", style="color: #f4340a;">
            <b><%= "location " + @tournament.errors[:location].join(" , ") %></b>
          </div>
        <% end %>
        </div>

        <div class="form-group">
          <%= form.label :image %>
          <%= form.file_field :image, class: "form-control-file" %>
        </div>

        
        <div class="row">
       
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <% if @tournament.persisted? %>
              <%= form.submit "Update", class: "btn btn-outline-primary " %>
            <% else %>
            <%= form.submit "Create", class: "btn btn-outline-primary " %>
            <% end %>
              <%= link_to "Back", tournaments_path(@tournament), class: "btn btn-outline-primary btn-sm" %>
            </div>
     
        </div>

      <% end %>
      </div>
    </div>
  </div>
</div>
