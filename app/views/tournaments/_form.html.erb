<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_with model: @tournament, local: true do |form| %>
        <div class="text-center mb-4">
          <h1 class="h3 mb-3 font-weight-normal">Tournament</h1>
          <%= @tournament.errors.full_messages.first if @tournament.errors.any? %>
        </div>

        <div class="form-group">
          <%= form.label :Name %>
          <%= form.text_field :name, class: "form-control", required: true, autocomplete: 'off' %>
        </div>

        <div class="form-group">
          <%= form.label :start_date %>
          <%= form.date_field :start_date, class: "form-control", required: true, autocomplete: 'off' %>
        </div>

        <div class="form-group">
          <%= form.label :end_date %>
          <%= form.date_field :end_date, class: "form-control", required: true, autocomplete: 'off' %>
        </div>

        <div class="form-group">
          <%= form.label :location %>
          <%= form.text_field :location, class: "form-control", required: true, autocomplete: 'off' %>
        </div>

        <div class="form-group">
          <%= form.label :image %>
          <%= form.file_field :image, class: "form-control-file" %>
        </div>
        <div class="d-grid gap-2 col-2 mx-auto">
       
        <%= form.submit "Create", class: "btn btn-primary " %>
        </div>
      <% end %>
    </div>
  </div>
</div>
