<%= form_with model: @tournament do |form| %>
  <%= @tournament.errors.full_messages.first if @tournament.errors.any? %><br/>
    <%= form.label :Name %>
    <%= form.text_field :name, required: true ,autocomplete:'off' %><br/>
    <%= form.label :start_date %>
    <%= form.date_field :start_date, required: true, autocomplete:'off' %><br/>
    <%= form.label :end_date %>
    <%= form.date_field :end_date, required: true,autocomplete:'off' %><br/>
    <%= form.label :location %>
    <%= form.text_field :location, required: true ,autocomplete:'off'%><br/>
    <br/>    
    <%= form.submit %>
  <% end %>
  

