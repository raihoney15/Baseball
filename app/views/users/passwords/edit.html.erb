

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">

      <div class="card mt-5">
        <div class="card-body">

          <h2 class="text-center mb-4">Change your password</h2>

          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "users/shared/error_messages", resource: resource %>
            <%= f.hidden_field :reset_password_token %>

            <div class="form-group">
              <%= f.label :password, "New password" %><br />
              <% if @minimum_password_length %>
                <small class="form-text text-muted">(<%= @minimum_password_length %> characters minimum)</small><br />
              <% end %>
              <%= f.password_field :password, class: 'form-control', autofocus: true, autocomplete: "new-password" %>
            </div>

            <div class="form-group">
              <%= f.label :password_confirmation, "Confirm new password" %><br />
              <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "new-password" %>
            </div>

            <div class="text-center">
              <%= f.submit "Change my password", class: 'btn btn-primary' %>
            </div>
          <% end %>

          <%= render "users/shared/links" %>

        </div>
      </div>

    </div>
  </div>
</div>
