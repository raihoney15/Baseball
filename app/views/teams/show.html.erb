<div class="container">
  <div style="display: flex; align-items: center;">
  <%= image_tag("team.png", alt: "team", style: "width: 60px; height: 60px; object-fit: cover;") %>
  <h2 style="margin-left: 10px;">Team</h2>
  <%= link_to "Back", tournament_path(@tournament), style:"margin-left: 900px;" ,class: "btn btn-outline-primary" %>

</div>
<div style="display: flex;">
  <%= render @team %>
  <div class="profile-picture">
  <%= image_tag @team.image.url, alt: "Profile Picture", style:"height: 100px;margin-left: 550px;" if @team.image.attached? %>
</div>
  </div>
  <div class="actions">
      <% if can? :update, @team %>
            <%= link_to new_tournament_team_rooster_path(@team.tournament, @team) do %>
              <%= image_tag("addroaster.png", alt: "edit", style: "width: 25px; height: 25px; object-fit: cover;") %> |
              <% end %>
            <%#= link_to "Add New Rooster", new_tournament_team_rooster_path(@team.tournament, @team), class: "btn btn-success" %> 
      <% end %>


      <% if can? :update, @team %>
            <%= link_to edit_tournament_team_path(@team.tournament, @team) do %>
              <%= image_tag("edit.png", alt: "edit", style: "width: 20px; height: 20px; object-fit: cover;") %> |
              <% end %>
              <%#= link_to "Edit this team", edit_tournament_team_path(@team.tournament, @team), class: "btn btn-primary" %> 
      <% end %>



      <% if can? :destroy, @team %>
            <div style=" margin-left:70px; margin-top: -25px;">
              <%= button_to [@team.tournament, @team] , method: :delete,  data: { confirm: "Are you sure?" }  do %>
              <%= image_tag("empty.png", alt: "edit", style: "width: 20px; height: 20px; object-fit: cover;") %> 
              <% end %>
            </div>
              <%#= button_to "Destroy", [@team.tournament, @team], method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
      <% end %>


            <%#= link_to "Back to Tournament", tournament_path(@tournament), class: "btn btn-secondary" %>
    
  </div>
  <br/>
  <h2>Rosters</h2>
  <div style="max-height: 400px; overflow-y: auto;">
  <table class="table">
  <thead>
    <tr>
      <th>Roosters</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @team.roosters.each do |rooster| %>
      <tr>
        <td>
          <p><%= rooster.name %></p>
        </td>
        <td>
        <%= link_to tournament_team_rooster_path(@tournament,@team,rooster) do %>
          <%= image_tag("show.png", alt: "show", style: "width: 20px; height: 20px; object-fit: cover;") %> 
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


  
</div>
</div>





