<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-6">
    <div class="border rounded p-4"> 
      <%= form_with model: [@tournament, @event] do |form| %>
        <% if @event.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>
          <ul>
            <% @event.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
        <div class="form-group">
          <%= form.label :game_type %>
          <%= form.text_field :game_type, class: "form-control", required: true, autocomplete: "off" %>
        </div>

        <div class="form-group">
          <%= form.label :team_id %>
          <%= form.collection_select :team_id, Team.all, :id, :name, { prompt: "Select home_team" }, class: "form-control", required: true, autocomplete: "off" %>
        </div>

        <div class="form-group">
          <%= form.label :opponent_team_id %>
          <%= form.collection_select :opponent_team_id, OpponentTeam.all, :id, :name, { prompt: "Select away_team" }, class: "form-control", required: true, autocomplete: "off" %>
        </div>

        <div class="form-group">
          <%= form.label :location %>
          <%= form.text_field :location, class: "form-control", required: true, autocomplete: "off" %>
        </div>

        <div class="form-group">
          <%= form.label :start_date %>
          <%= form.date_field :start_date, class: "form-control", required: true, autocomplete: "off" %>
        </div>

        <div class="form-group">
          <%= form.label :belongs %>
          <%= form.text_field :belongs, class: "form-control", required: true, autocomplete: "off" %>
        </div>

        <div class="form-group">
          <%= form.label :memo %>
          <%= form.text_field :memo, class: "form-control", required: true, autocomplete: "off" %>
        </div>

        <div class="form-group">
          <%= form.label :image %>
          <%= form.file_field :image, class: "form-control" %>
        </div>

        <div class="row">
        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
          <%= form.submit "Create", class: "btn btn-outline-primary " %>
          <%= link_to "Back", tournament_path(@tournament), class: "btn btn-outline-primary btn-sm" %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>
