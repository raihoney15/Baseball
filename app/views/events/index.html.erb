<div class="container mt-6">
  <h1 class="text-center mb-4">EVENTS</h1>

  <div class="d-flex justify-content-between align-items-center mb-3">


    <div class="input-group">
    <%= search_form_for @q_events ,url: tournament_path(@tournament) do |f| %>
      <%= f.search_field :game_type_cont %>
      <%= f.submit "Search" %>
  <% end %>
    </div>

    <%= link_to "New Event", new_tournament_event_path, class: "btn btn-success" %>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td><%= event.game_type %></td>
          <td>
            <%= link_to "Show", tournament_events_path, class: "btn btn-primary btn-sm" %> 
           
              <%= link_to "Edit", edit_tournament_event_path(@tournament,@event), class: "btn btn-secondary btn-sm" %> 
           
            
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
