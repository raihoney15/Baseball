<div class="container mt-6">
  <h1 class="text-center mb-4">EVENTS</h1>

  <div class="d-flex justify-content-between align-items-center mb-3">
    <!-- Search Bar -->
    <div class="input-group">

      <input type="text" class="form-control" placeholder="Search..." aria-label="Search" aria-describedby="basic-addon2">
      <div class="input-group-append">
        <button class="btn btn-outline-secondary" type="button">Search</button>
      </div>
      
    </div>

    <%= link_to "New Event", new_tournament_event_path, class: "btn btn-success" %>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td><%= event.game_type %></td>
          <td>
            <%= link_to "Show", tournament_events_path, class: "btn btn-primary btn-sm" %> 
           
              <%= link_to "Edit", edit_tournament_event_path, class: "btn btn-secondary btn-sm" %> 
           
            
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
